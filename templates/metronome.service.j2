[Service]
# Cleanup ExecStart
ExecStart=
ExecStart=/usr/bin/metronome \
  --daemon 0 \
  --disable-syslog \
  --carbon-address '{{ metronome_carbon_address }}' \
  --webserver-address '{{ metronome_webserver_address }}' \
  --stats-directory '{{ metronome_stats_directory }}'
User={{ metronome_user }}
Group={{ metronome_group }}

[Service]
{% for k, v in metronome_service_overrides.items() %}
{{ k }}={{ v }}
{% endfor %}
